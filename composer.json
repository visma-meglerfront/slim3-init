{
	"name": "adeptoas/slim3-init",
	"type": "library",
	"description": "A very convenient support library for Slim 3",
	"license": "proprietary",
	"authors": [
		{
			"name": "Benjamin Schmidt",
			"email": "benjamin.schmidt@visma.com",
			"homepage": "https://bluefirex.de"
		}
	],
	"require": {
		"php": ">=7.4",
		"slim/slim": "^4.9",
		"php-di/php-di": "^6.3",
		"ext-mbstring": "*",
		"ext-json": "*",
		"slim/psr7": "^1.5"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^2.5"
	},
	"autoload": {
		"psr-4": {
			"Adepto\\Slim3Init\\": "src"
		}
	},
	"scripts": {
		"test": [
			"@phpunit",
			"@phpcs"
		],
		"phpunit": "php vendor/bin/phpunit",
		"phpcs": "php vendor/bin/phpcs"
	}
}
